---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.jsx';
import Hero from '../components/Hero.jsx';
import CollectionsPreview from '../components/CollectionsPreview.jsx';
import HistoryShort from '../components/HistoryShort.jsx';
import InstagramSection from '../components/InstagramSection.jsx';
import ContactSection from '../components/ContactSection.jsx';
---

<Layout title="Heartmade By M">
    
    <Navbar client:load />

    <main>
      
      <div class="sticky top-0 z-0 h-screen w-full">
        <Hero client:load />
      </div>

      <div id="colecciones" class="relative z-10 w-full bg-[#f5f5f4] gpu-layer shadow-2xl">
         <CollectionsPreview client:visible />
      </div>

      <div id="historia" class="relative z-20 w-full bg-[#f5f5f4] gpu-layer">
        <HistoryShort client:visible />
      </div>

      <div class="relative z-30 w-full bg-[#f5f5f4] gpu-layer">
        <InstagramSection client:visible />
      </div>

      <div id="contacto" class="relative z-40 w-full bg-[#f5f5f4] gpu-layer">
        <ContactSection client:visible />
      </div>

    </main>
    
</Layout>

<style>
  /* ESTA CLASE FUERZA A LA TARJETA GRÁFICA A PREPARARSE */
  .gpu-layer {
    will-change: transform;
    transform: translateZ(0); /* Truco para activar aceleración 3D */
    backface-visibility: hidden;
  }
</style>